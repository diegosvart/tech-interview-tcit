FROM node:20-alpine
WORKDIR /app

RUN apk add --no-cache curl

# Install dependencies first for better layer caching
COPY server/package*.json ./
RUN npm install

# Copy source
COPY server/. .

# Generate prisma client (non-fatal if caching issue in OneDrive)
RUN npx prisma generate || true

ENV NODE_ENV=development
ENV PORT=3000
EXPOSE 3000

CMD ["npm","run","dev"]
